---
import Layout from '../../layouts/Layout.astro';
import ManualArticle from '../../components/ManualArticle.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import WhatsAppWidget from '../../components/WhatsAppWidget.astro';
import Sidebar from '../../components/Sidebar.astro';

const title = "¿Cómo Emitir Factura/Boleta con Fecha Anterior?";
const content = `
    <ul class="pl-6">
        <li><h3>Paso 1</h3></h1>
        <p>Ingresamos a “Facturas Electrónicas” o “Boletas Electrónicas”</p><br/>
        <li><img src="https://ayuda.creativa.com.pe/wp-content/uploads/2025/02/Screenshot_50.png"></li><br/>

        <li><h3>Paso 2</h3></h1>
        <p>Click en Agregar</p><br/>
        <li><img src="https://ayuda.creativa.com.pe/wp-content/uploads/2025/02/Screenshot_51.png"></li><br/>

        <li><h3>Paso 3</h3></h1>
        <p>Buscamos en pedido</p><br/>
        <li><img src="https://ayuda.creativa.com.pe/wp-content/uploads/2025/02/Screenshot_52.png"></li><br/>

        <li><h3>Paso 4</h3></h1>
        <p>Cambiamos la fecha de emisión del documento</p><br/>
        <li><img src="https://ayuda.creativa.com.pe/wp-content/uploads/2025/02/Screenshot_53.png"></li><br/>

        <li><h3>¡Importante!</h3></h1>
        <p>Si ya se emitió con la fecha actual o dentro de los 3 días, se deberá utilizar otra serie.</p><br/>
        <li><img src="https://ayuda.creativa.com.pe/wp-content/uploads/2025/02/Screenshot_54.png"></li><br/>

        <li><h3>Paso 5</h3></h1>
        <p>Guardamos el documento</p><br/>
        <li><img src="https://ayuda.creativa.com.pe/wp-content/uploads/2025/02/Screenshot_55.png"></li><br/>

        
        </ul>

  
`;
const currentPath = Astro.url.pathname;
---

<Layout title={title}>
  <Header />
  <div class="flex flex-col-reverse md:flex-row max-w-6xl mx-auto">
    <Sidebar currentPath={currentPath} />
      <div class="md:w-3/4 p-4">
      <ManualArticle title={title} content={content} />
    </div>
  </div>

  <Footer />
  <WhatsAppWidget />  
</Layout>
