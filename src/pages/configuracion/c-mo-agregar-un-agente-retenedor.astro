---
import Layout from '../../layouts/Layout.astro';
import ManualArticle from '../../components/ManualArticle.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import WhatsAppWidget from '../../components/WhatsAppWidget.astro';
import Sidebar from '../../components/Sidebar.astro';

const title = "¿Cómo Agregar un Agente Retenedor?";
const content = `
    <ul class="pl-6">
        <li><h3>Paso 1</h3></h1>
        <p>Vamos al apartado ‘Principal’, luego a ‘Terceros’.</p><br/>
        <li><img src="https://ayuda.creativa.com.pe/wp-content/uploads/2025/03/Screenshot_69.png"></li><br/>

        <li><h3>Paso 2</h3></h1>
        <p>Seleccionamos el usuario que vamos a poner como agente retenedor y ponemos el porcentaje deseado.</p><br/>
        <li><img src="https://ayuda.creativa.com.pe/wp-content/uploads/2025/03/Screenshot_70.png"></li><br/>
        <li><img src="https://ayuda.creativa.com.pe/wp-content/uploads/2025/03/Screenshot_71.png"></li><br/>

        <li><h3>Paso 3</h3></h1>
        <p>Confirmamos la modificación en el mensaje de confirmación.</p><br/>
        <li><img src="https://ayuda.creativa.com.pe/wp-content/uploads/2025/03/Screenshot_72.png"></li><br/>
        </ul>

  
`;
const currentPath = Astro.url.pathname;
---

<Layout title={title}>
  <Header />
  <div class="flex flex-col-reverse md:flex-row max-w-6xl mx-auto">
    <Sidebar currentPath={currentPath} />
      <div class="md:w-3/4 p-4">
      <ManualArticle title={title} content={content} />
    </div>
  </div>

  <Footer />
  <WhatsAppWidget />  
</Layout>
